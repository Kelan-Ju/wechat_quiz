/* pages/address/address.wxss */
.mine-bg {
  margin: 0rpx;
  width: 750rpx;
  height: 1334rpx;
  /* position: relative; */
}

.mine-bg-image {
  margin: 0rpx;
  width: 100%;
  height: 100%;
  position: absolute;
}

/* 个人头像、返回按钮、标题 */
@import "../../../lib/appHead.wxss"; 

.address-list {
  margin-top: 200rpx;
  margin-left: 75rpx;
  width: 600rpx;
  height: 856rpx;
  position: absolute;
}

.address-item {
  margin: 0rpx 0rpx 20rpx 0rpx;
  padding: 20rpx 20rpx;
  width: 560rpx;
  height: 240rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
}

.address-content {
  margin: 0rpx;
  width: 460rpx;
  height: 240rpx;
  border-right: 0.2rpx rgb(184, 183, 183) solid;
  float: left;
}

.edit-delete-view {
  margin: 0rpx;
  width: 99rpx;
  height: 240rpx;
  float: left;
}

.name-phone-view {
  margin: 0rpx;
  width: 460rpx;
  height: 45rpx;
  float: left;
}

.address-name {
  margin: 0rpx;
  height: 45rpx;
}
.address-phone {
  margin-top: 0rpx;
  margin-left: 20rpx;
  color: gray;
}

.address-view {
  margin-top: 20rpx;
  width: 450rpx;
  float: left;
}
.address {
  margin-top: 30rpx;
  font-size: 15px;
  line-height: 16px;
}

.edit-delete {
  margin-left: 10rpx;
  width: 99rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 17px;
  color: rgb(119, 177, 5);
  float: left;
}

.add-address-view {
  margin-top: 1090rpx;
  margin-left: 300rpx;
  width: 150rpx;
  height: 220rpx;
  position: absolute;
}

.add-icon {
  margin: 0rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  float: left;
}

.add-address-view text {
  margin-top: 15rpx;
  width: 150rpx;
  color: white;
  text-align: center;
  font-size: 17px;
  float: left;
}