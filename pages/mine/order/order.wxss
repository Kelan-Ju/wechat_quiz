/* pages/order/order.wxss */
.mine-bg {
  margin: 0rpx;
  width: 750rpx;
  height: 1334rpx;
  /* position: relative; */
}

.mine-bg-image {
  margin: 0rpx;
  width: 100%;
  height: 100%;
  position: absolute;
}

/* 个人头像、返回按钮、标题 */
@import "../../../lib/appHead.wxss"; 

.order-list {
  margin-top: 200rpx;
  margin-left: 75rpx;
  width: 600rpx;
  height: 1056rpx;
  position: absolute;
}

.order-item {
  margin: 0rpx 0rpx 20rpx 0rpx;
  padding: 0rpx 20rpx;
  width: 560rpx;
  height: 240rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
}

.date {
  margin-top: 10rpx;
  width: 560rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 15px;
  border-bottom: 0.2rpx gray solid;
  float: left;
}

.order-content {
  margin: 0rpx;
  width: 560rpx;
  height: 170rpx;
  float: left;
}

.order-content image {
  margin: 20rpx 0rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 15rpx;
  float: left;
}

.description {
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 410rpx;
  height: 130rpx;
  float: left;
}
.description-name {
  margin: 0rpx;
  width: 410rpx;
  height: 70rpx;
  font-size: 17px;
  line-height: 18px;
  float: left;

  /* 只显示2行 */
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.description-price {
  margin-top: 20rpx;
  width: 410rpx;
  height: 40rpx;
  line-height: 40rpx;
  float: left;
}