/* pages/ranking/ranking.wxss */

.mine-bg {
  margin: 0rpx;
  width: 750rpx;
  height: 1334rpx;
  /* position: relative; */
}

.mine-bg-image {
  margin: 0rpx;
  width: 100%;
  height: 100%;
  position: absolute;
}

/* 个人头像、返回按钮、标题 */
@import "../../../lib/appHead.wxss";

.ranking-view {
  margin-top: 200rpx;
  margin-left: 75rpx;
  width: 600rpx;
  height: 1006rpx;
  position: absolute;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
}

/* 滑动视图隐藏滑动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.ranking-item {
  margin: 0rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 560rpx;
  height: 110rpx;
  line-height: 110rpx;
  /* border-bottom: 0.2rpx gray solid; */
}

.number {
  margin: 20rpx 0rpx;
  width: 70rpx;
  height: 70rpx;
  font-size: 30px;
  text-align: center;
  line-height: 70rpx;
  font-family: Arial,Helvetica,sans-serif;
  font-weight: bold;
  float: left;
}

.avatar {
  margin: 20rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  float: left;
}

.nickname {
  margin: 20rpx 0rpx;
  width: 220rpx;
  height: 70rpx;
  text-align: left;
  line-height: 70rpx;
  font-size: 15px;
  text-overflow: ellipsis; /*超出省略*/
  white-space: nowrap; /*不换行*/
  overflow: hidden; /*超出不显示*/
  float: left;
}

.amount {
  margin: 20rpx 0rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  float: right;
}
