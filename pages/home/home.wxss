/* pages/home/home.wxss */
.home-bg {
  margin: 0rpx;
  width: 750rpx;
  height: 1334rpx;
  /* position: relative; */
}

.home-bg-image {
  margin: 0rpx;
  width: 100%;
  height: 100%;
  position: absolute;
}

/* 个人头像、返回按钮、标题 */
@import "../../lib/appHead.wxss";  

.bg-scroll {
  margin: 128rpx 0rpx 0rpx 0rpx;
  width: 750rpx;
  height: 1206rpx;
  position: absolute;
}

.background-view {
  height: 100%;
  width:100%;
}

.frame-bg {
  margin: 50rpx;
  height: 1106rpx;
  width:650rpx;
  position:absolute;
}

.question {
  margin: 0rpx;
  width: 100%;
  height: 100%;
  position: absolute;
}

.number {
  margin-top: 95rpx;
  width: 730rpx;
  height: 20rpx;
  font-family: "幼圆","方正姚体",Geneva,"Times New Roman";
  font-weight: bold;
  text-align: center;
  color: gold;
  float: left;
}

.content-bg {
  margin-top: 70rpx;
  margin-left: 120rpx;
  width: 510rpx;
  height: auto;
  border-radius: 10rpx;
  /* background-color: rgba(77, 194, 194, 0.4); */
  float: left;
}

.content {
  margin-top: 40rpx;
  padding: 20rpx;
  width: 95%;
  font-size: 17px;
  font-family: "幼圆","方正姚体",Geneva,"Times New Roman";
  font-weight: bold;
  color: goldenrod;
  text-align: center;
  float: left;
}

.sub-content {
  text-align: left;
  display: inline-block;
}

.answer {
  margin-left: 55rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  width: 400rpx;
  height: auto;
  font-size: 17px;
  font-weight: bold;
  float: left;
  /* background-color: pink; */
}

.answer-list {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  width: 100%;
  height: 40px;
  text-align: center;
  font-size: 16px;
  font-family: "幼圆","方正姚体",Geneva,"Times New Roman";
  color: goldenrod;
  line-height: 40px;
  border-color: goldenrod;
  border-width: 1px;
  border-radius: 20px;
  border-style: solid;
}
.answer-list-selected {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  width: 100%;
  height: 40px;
  text-align: center;
  font-size: 16px;
  font-family: "幼圆","方正姚体",Geneva,"Times New Roman";
  color: rgb(255, 255, 160);
  background-color: goldenrod;
  line-height: 40px;
  border-radius: 20px;
}