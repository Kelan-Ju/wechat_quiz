<!--pages/login/login.wxml-->
<view class='home-bg'>
  <image class='home-bg-image' src='http://39.106.179.254//public//uploads//b04a3e1fd9ff4ea3efd1160b73a010bc.png'></image>
  <!-- 小程序名 -->
  <view class='name'>布丁竞猜</view>
  <swiper class='bg-scroll' current='{{currentPage}}'>
    <!-- 登录入口 -->
    <swiper-item catchtouchmove="stopTouchMove">
      <view class='login-view'>
        <view class='login-button' bindtap='loginAction'>
          <image src='http://39.106.179.254//public//uploads//37c1d022c419844d4db8e5e7f7fa5b2d.png'></image>
          <text>微信登录</text>
        </view>
        <view class='login-description'>要先登录才可以领红包哦</view>
      </view>
    </swiper-item>
    <!-- 功能入口 -->
    <swiper-item catchtouchmove="stopTouchMove">
      <image src='http://39.106.179.254//public//uploads//03f5d1735bcc6af7979066cf23e54e6b.png' class='function-begin-frame'></image>
      <image src='http://39.106.179.254//public//uploads//03f5d1735bcc6af7979066cf23e54e6b.png' class='function-personal-frame'></image>
      <view class='selection-view'>
        <view class='begin-view' bindtap='gameBegin'>
          <image src='http://39.106.179.254//public//uploads//5e39ad38564d583b5a89c28aa4309337.png' class='begin-icon'></image>
          <text>开始答题</text>
        </view>
        <view class='personal-view' bindtap='goPersonal'>
          <image src='http://39.106.179.254//public//uploads//32312af7ebf5972759e23678ed1b9f8f.png' class='personal-icon'></image>
          <text>个人中心</text> 
        </view>
      </view>
    </swiper-item>
  </swiper>
</view>